
<div class="block">

    <div class="centered">
        <img alt="{{ image.getPavadinimas() }}" src="{{  asset(image.getWebPath()) }}"/>
    </div>

</div>
<div class="comments">
<ul>
    {% for single in comments %}
    <li>
        <fieldset>
            <legend>{{ single.user.username }}</legend>
            {{ single.comment }}
        </fieldset>
    </li>
   {% endfor %}
</ul>

    {{ form(form , {'attr': {'id': 'form_comment_add'}}) }}
    <div class="like" id="like_area" like_status="{{ (liked ? 'true' : 'false') }}">
        Patinka
        <a href ="{{ path('galerija_images_like', { 'imageId' : image.imageId })  }}">
            <img alt="Like" src="{{ (liked ? asset('bundles/GalerijaImages/images/like-ok.png')  :  asset('bundles/GalerijaImages/images/like.png')) }}  "/>
        </a>
        <span>{{ image.getLikeCount() }}</span>
    </div>
</div>
